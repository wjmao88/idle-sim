root = true

[*]

# Change these settings to your own preference
indent_style = space

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.vue]
indent_size = 2

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sass]
indent_size = 2
